{
  "compilerOptions": {
    "target": "ES6",                                  
    "module": "commonjs",                              
    "esModuleInterop": true,                             
    "forceConsistentCasingInFileNames": true,            
    "strict": true,        
    "outDir": "./public/assets/js", // se o diretorio nao existir, ele vai criar um 
    "rootDir": "./src",      
    "removeComments": true, 
    "noEmitOnError": true, 
    "skipLibCheck": true,

    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true
  },
}
