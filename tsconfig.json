{
  "compilerOptions": {
    "target": "es2016",                                  
    "module": "commonjs",                              
    "esModuleInterop": true,                             
    "forceConsistentCasingInFileNames": true,            
    "strict": true,                                  
    "skipLibCheck": true                                 
  },
  "exclude": [
    "**/*.dev.ts", // excluindo qualquer arquivo de qualquer pasta que terminar com ".dev.ts"
    "node_modules" // ignora essa pasta (mas ele faz isso automaticamente, então não precisa colocar essa configuração)
  ],
  "include": [
    "src/*", // vai compilar somente esse arquivo
    "app.ts"
  ]
}
